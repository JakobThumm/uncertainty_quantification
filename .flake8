[flake8]
max-line-length = 120
indent-size = 4
ignore = 
    # W503: line break before binary operator (conflicts with W504)
    W503,
    # E203: whitespace before ':' (conflicts with black formatter)
    E203
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    htmlcov,
    node_modules
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines in settings files
    settings.py:E501
    # Allow unused variables in test files (fixtures, etc.)
    test_*.py:F841
    tests/*.py:F841